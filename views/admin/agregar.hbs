<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4 style="font-size: 2.1em;">Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="titulo" name="titulo">
                </div>
                <div class="form-group">
                    <textarea style="margin-top: 15px;" type="text" class="form-control" placeholder="subtitulo" name="subtitulo"></textarea>
                </div>
                <div class="form-group">
                    <textarea style="margin-top: 15px;" type="text" class="form-control" placeholder="cuerpo" name="cuerpo"></textarea>

                </div>
                <button style="margin-top: 15px;" type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}

        </div>
    </div>
</div>
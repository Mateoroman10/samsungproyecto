<div class="container" style="margin-top: 100px;">

    <div class="row">
        <div class="col">
            <p style="float:right;">
                <span>hola {{persona}}!</span>
                <a href="/admin/login/logout" class="btn btn-dark btn-damger">Cerrar sesion <i
                        class="fasfa-sign-out-alt" aria-hidden="true"></i></a>
            </p>

        </div>
    </div>
    {{!-- fin de la fila 1--}}
    {{!-- Nueva fila 2--}}

    <div class="row">
        <div class="col-7" style="margin-top:-9px ;">
            <h2>Listado de novedades</h2>

        </div>
        <div class="col-5 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"> <i class="fas fa-plus"></i>Nuevo</a>

        </div>
    </div>
    {{!-- fin de la fila 2--}}
    {{!-- Nueva fila 3--}}

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col" class="text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-right">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>